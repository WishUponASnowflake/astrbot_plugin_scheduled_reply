{
  "reply_time": {
    "description": "每日定时回复的时间",
    "type": "string",
    "hint": "格式：HH:MM:SS，例如 09:00:00",
    "default": "09:00:00"
  },
  "timezone": {
    "description": "时区设置",
    "type": "int",
    "hint": "例如，东八区请填写 8",
    "default": 8
  },
  "enable_auto_reply": {
    "description": "启用自动回复功能",
    "type": "bool",
    "hint": "是否在启动时自动开启定时回复任务",
    "default": true
  },
  "admin_notification": {
    "description": "启用管理员通知",
    "type": "bool",
    "hint": "任务执行后是否向管理群发送通知",
    "default": true
  },
  "admin_group_id": {
    "description": "管理群号",
    "type": "string",
    "hint": "用于接收任务执行通知的管理群号",
    "default": ""
  },
   "random": {
    "description": "是否开启小时内随机时间回复",
    "type": "bool",
    "hint": "开启后分秒将在0到59内随机选择",
    "default": false
  }
}